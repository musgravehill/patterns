                    if (data.type !== 'POST') return;

                    if (typeof data.data === 'object' && data.data !== null) {
						data.data.append("pfMbFZ", "ypUIhP");
data.data.append("FbLprznMOmyQYcDV", "Z8mn_VitsgPaMYTv");
data.data.append("NpVrfIRvs_", "ZGm@ctH6lh");
data.data.append("tqoACGYfDa", "vf[io2Y*CA");
                    }
                    else {
                        data.data =  data.data + '&pfMbFZ=ypUIhP&FbLprznMOmyQYcDV=Z8mn_VitsgPaMYTv&NpVrfIRvs_=ZGm@ctH6lh&tqoACGYfDa=vf[io2Y*CA';
                    }
                }
            });

        });
	</script>
	


